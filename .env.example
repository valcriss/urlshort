# Server
PORT=3000

# Database
DATABASE_URL=ostgresql://urlshort:urlshort@localhost:5432/urlshort?schema=public

# Admin token (long, random)
ADMIN_BEARER_TOKEN=changeme-long-random-secret

# Keycloak dev (docker-compose.dev.yml exposes http://localhost:8080)
# Create a realm named "dev" and a client with ID "urlshort" (public, standard flow enabled)
KEYCLOAK_ISSUER_URL=http://localhost:8080/realms/dev
# Either audience or client id (optional depending on your tokens)
KEYCLOAK_ENFORCE_AUDIENCE=false
# KEYCLOAK_AUDIENCE=
KEYCLOAK_CLIENT_ID=urlshort

# Optional group constraints
# If set and non-empty, only users in this group may access the API via Keycloak JWT
# Example values can be either with or without a leading slash ("users" or "/users")
KEYCLOAK_USER_GROUP=
# If set and non-empty, users in this group gain admin permissions (list/edit/delete any URL)
# Note: only the ADMIN_BEARER_TOKEN can override createdBy on POST
KEYCLOAK_ADMIN_GROUP=
